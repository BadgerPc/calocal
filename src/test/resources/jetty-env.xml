<Configure class="org.eclipse.jetty.server.Server">
	<New id="DSCalocal" class="org.eclipse.jetty.plus.jndi.Resource">
	    <Arg>DB_Calocal</Arg>
	    <Arg>
	     <New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
	       <Set name="Url">jdbc:mysql://localhost:3306/calocal_test?useUnicode=true&amp;characterEncoding=utf8&amp;autoReconnect=true</Set>
	       <Set name="User">calocal</Set>
	       <Set name="Password">calocal</Set>       
	     </New>
	    </Arg>
	</New>
</Configure>